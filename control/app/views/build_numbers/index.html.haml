- title "List build numbers"
  
%h1.page-header= yield(:title)

.row
  .col-md-12
    %table.table.table-striped.table-bordered.table-hover.table-responsive
      %tr
        %th Branch
        %th Commit
        %th Number
        %th Enviroment
        %th More info
        
      - @build_numbers.each do |b|
        %tr
          %td= b.branch
          %td= b.commit
          %td= b.number
          %td= link_to b.enviroment.title, enviroment_path(b.enviroment)
          %td= link_to content_tag(:span, "", :class => "glyphicon glyphicon glyphicon-list"), b, :class => "btn btn-default"
    .text-center= will_paginate(@build_numbers, :renderer => BootstrapPagination::Rails, :previous_label => "&larr;", :next_label => "&rarr;")
