!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %title FBBS2 Control Host
    %meta{:content => content_for?(:description) ? yield(:description) : "App_Name", :name => "description"}
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    = yield(:head)
  %body
    #main{:role => "main"}
      %nav.navbar.navbar-inverse{:role => "navigation"}
        .container
          = link_to "Home", root_path, class: "navbar-brand"
          .collapse.navbar-collapse
            %ul.nav.navbar-nav
              /%li{:class => active_class_for('devices')}= link_to 'Devices', devices_path
              /%li{:class => active_class_for('media_items')}= link_to 'Media items', media_items_path
              - if current_user and current_user.admin?
                %li= link_to 'Admin', '#'
            %ul.pull-right.nav.navbar-text
              %li
              - if user_signed_in?
                Logged in as
                = succeed "." do
                  %strong= current_user.email
                  = image_tag current_user.gravatar_url, size: "24x24", alt: "gravatar"
                = link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link'
                |
                = link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'
              - else
                = link_to "Sign up", new_user_registration_path, :class => 'navbar-link'
                |
                = link_to "Login", new_user_session_path, :class => 'navbar-link'
            
      .container
        .content
          .row
            .col-md-12
              = render 'layouts/messages'
            .col-md-12
              = yield
