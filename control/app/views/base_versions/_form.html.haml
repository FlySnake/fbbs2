= bootstrap_form_for @base_version do |f|
  - if @base_version.errors.any?
    #error_explanation
      %h2= "#{pluralize(@base_version.errors.count, "error")} prohibited this base_version from being saved:"
      %ul
        - @base_version.errors.full_messages.each do |msg|
          %li= msg

  = f.text_field :name
  = f.primary 'Save'
  - if not defined?(delete_disabled) or not delete_disabled
    = link_to 'Delete this version', @base_version, :method => :delete, :class => "btn btn-danger pull-right", :data => { :confirm => 'Are you sure?' }
