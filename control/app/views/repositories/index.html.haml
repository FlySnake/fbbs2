- title "List repositories"
  
%h1.page-header= yield(:title)

.row
  .col-md-12
    %table.table.table-striped.table-bordered.table-hover.table-responsive
      %tr
        %th Title
        %th Path
        %th VCS type
        %th More info
        
      - @repositories.each do |repository|
        %tr
          %td= repository.title
          %td= repository.path
          %td= repository.vcs_type.humanize
          %td= link_to content_tag(:span, "", :class => "glyphicon glyphicon glyphicon-list"), repository, :class => "btn btn-default"
          
    = link_to 'Add new repository', new_repository_path, class: "btn btn-primary"