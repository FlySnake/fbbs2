= bootstrap_form_for(@worker) do |f|
  - if @worker.errors.any?
    #error_explanation
      %h2= "#{pluralize(@worker.errors.count, "error")} prohibited this worker from being saved:"
      %ul
        - @worker.errors.full_messages.each do |msg|
          %li= msg
            
  = f.text_field :title
  = f.text_field :address
  = f.primary 'Save'
  - if not defined?(delete_disabled) or not delete_disabled
    = link_to 'Delete this worker', @worker, :method => :delete, :class => "btn btn-danger pull-right", :data => { :confirm => 'Are you sure?' }