= bootstrap_form_for(@worker, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f|
  = f.text_field :title
  = f.text_field :address
  = f.number_field :priority
  = f.form_group title: "Check to disable this worker. It will be listed, but not used" do
    = f.check_box :disabled
  .row
    .col-sm-10.col-sm-offset-2
      %ul
      - @worker.target_platforms.each do |w|
        %li= w.title
  = f.primary 'Save'
  - if not defined?(delete_disabled) or not delete_disabled
    = link_to 'Delete this worker', @worker, :method => :delete, :class => "btn btn-danger pull-right", :data => { :confirm => 'Are you sure?' }