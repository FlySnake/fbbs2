= bootstrap_form_for(@home_page_content, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f|
  = f.text_field :title
  = f.url_field :link
  = f.number_field :position
  = f.primary 'Save'
  - if not defined?(delete_disabled) or not delete_disabled
    = link_to 'Delete this content', @home_page_content, :method => :delete, :class => "btn btn-danger pull-right", :data => { :confirm => 'Are you sure?' }